{% extends 'base.html.twig' %}

{% block title %}Hello TypeController!{% endblock %}

{% block body %}

    <a href="{{ path('app_index') }}"><h1>Pokemen</a>
    {% if is_granted('ROLE_USER') %}
        <a href="{{ path('app_logout') }}"><h2>Logout</h2></a>
    {% else %}
        <a href="{{ path('app_login') }}"><h2>Login</h2></a>
    {% endif %}
    
    <br><br>{{ type.name }}</h1>

    {# <img src="{{ type.image }}" alt="{{ type.name }}'s gif"> #}
    <br>
    {% if previousType %}
        <a href="{{ path('app_type', {'slug': previousType.slug}) }}">Previous Type</a>
    {% endif %}

    {% if nextType %}
        <a href="{{ path('app_type', {'slug': nextType.slug}) }}">Next Type</a>
    {% endif %}
    <br>
    <a href="{{ path('app_types') }}">Back to Types</a>
    
{% endblock %}
