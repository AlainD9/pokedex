{% extends 'base.html.twig' %}

{% block title %}Hello PokedexController!{% endblock %}

{% block body %}
    <a href="{{ path('app_index') }}"><h1>Pokemen</a><br><br>{{ pokemon.name }} - {{ pokemon.number }}</h1>

    <h3>{{ 'Pokemon\'s type: ' }}{{ pokemon.type.name }}<br>{{ 'First region: ' }}{{ pokemon.region.name }}</h3>
    <img src="{{ pokemon.image }}" alt="{{pokemon.name}}'s gif">
    <br>
{% if previousPokemon %}
    <a href="{{ path('app_pokemon', {'pokemonName': previousPokemon.name}) }}">Previous pokemon</a>
{% endif %}

{% if nextPokemon %}
    <a href="{{ path('app_pokemon', {'pokemonName': nextPokemon.name}) }}">Next pokemon</a>
{% endif %}

    <br>
    <a href="{{ path('app_pokedex') }}">Back to Pokedex</a>

{% endblock %}
