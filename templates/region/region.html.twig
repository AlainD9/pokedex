{% extends 'base.html.twig' %}

{% block title %}Hello RegionController!{% endblock %}

{% block body %}

    <a href="{{ path('app_index') }}"><h1>Pokemen</a></h1>

    {% if is_granted('ROLE_USER') %}
        <a href="{{ path('app_logout') }}"><h2>Logout</h2></a>
    {% else %}
        <a href="{{ path('app_login') }}"><h2>Login</h2></a>
    {% endif %}

    <h1>{{ region.name }}</h1>
    
    {# <img src="{{ region.image }}" alt="{{ region.name }}'s gif"> #}<br>

    {% if previousRegion %}
        <a href="{{ path('app_region', {'slug': previousRegion.slug}) }}">Previous Region</a>
    {% endif %}

    {% if nextRegion %}
        <a href="{{ path('app_region', {'slug': nextRegion.slug}) }}">Next Region</a>
    {% endif %}
    <br>
    <a href="{{ path('app_regions') }}">Back to Regions</a>
    
{% endblock %}
